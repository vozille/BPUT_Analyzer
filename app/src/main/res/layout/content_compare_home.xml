<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/compare_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/compare_header"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/header_fgcolor"
        android:textSize="15sp"
        android:background="#797676"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout0"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="start"
            android:text="Name-1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/header_fgcolor"
            android:layout_height="wrap_content"
            android:id="@+id/player1h"
            android:background="#45000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/header_fgcolor"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="Name-2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/header_fgcolor"
            android:layout_height="wrap_content"
            android:id="@+id/player2h"
            android:background="#45000000" />
    </LinearLayout>

    <Button
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPARE"
        android:onClick="compare_click"
        android:textStyle="bold"
        android:id="@+id/compare_final"
        android:textColor="@color/header_fgcolor"
        android:background="#2d5800"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">

        <Spinner
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:id="@+id/player1"
            android:background="#45000000"
            android:layout_marginTop="78dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="v/s"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/header_fgcolor"
            android:layout_height="match_parent"/>


        <Spinner
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:id="@+id/player2"
            android:background="#45000000"
            android:layout_marginTop="78dp" />

    </LinearLayout>

</RelativeLayout>
