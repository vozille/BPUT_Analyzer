<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vozille.myapplication.display_rank_list"
    tools:showIn="@layout/activity_display_rank_list">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ranklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#545454"
            android:textColor="@color/header_fgcolor"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Warning.\nThe SGPA shown here doesnt have back papers updated.In some cases, the rechecking results of students may also be omitted.\nIf list is incomplete, generate again."/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:id="@+id/set_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0e9691"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/header_fgcolor"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/set_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0e9691"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/header_fgcolor"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="#660078"
                android:text="Rank"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/header_fgcolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:background="#660078"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/header_fgcolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="#660078"
                android:text="SGPA"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/header_fgcolor"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
